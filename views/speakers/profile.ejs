<%include ../partials/header-speaker%>
<style>body{background:linear-gradient(0deg, #141da2 0%, #9b5cf6 100%) no-repeat; min-height: 100vh} </style>
<div class="container my-5 bg-white p-5 rounded shadow ">
    <div class="row">
       <div class="col-md-4 col-12">
           <img src="/imgs/profile.png" class="rounded mb-2">
           <h3 class=""><%=name%></h3>
           <a class="btn btn-info mt-3" href="/speakers/editProfile/<%=speaker._id%>">Edit profile</a>
       </div>
       <div class="col-md-8 col-12 mt-3">
           <div class="container">
                <div class="row">
                    <div class="col-4 h5">
                        <p>Name :</p>
                        <p>Password :</p>
                        <p>Age :</p>
                    </div>
                    <div class="col-6 lead">
                        <p><%=speaker.name%></p>
                        <p><%=speaker.password%></p>
                        <p><%=speaker.age%></p>
                    </div>
                </div>
           </div>
          
           <p class="mt-3 ml-2 h5">Events:</p>
           <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Date</th>
                    <th scope="col">psition</th>
                    <th scope="col">Status</th>
                  </tr>
                </thead>
                <tbody>
                 
                    <%events.forEach((e)=>{%>
                        <tr>
                            <td><%=e._id%></td>
                            <td><%=e.Title%></td>
                            <td><%=e.Date%></td>
                            <td>Main speaker</td>
                            <%if(e.status=="accepted"){%>
                                <td><%=e.status%></td>
                            <%}else{%>
                                <td class="text-white">
                                    <a href="/speakers/accept/<%=e._id%>/<%=speaker._id%>" class="btn btn-info">Accept</a>

                                    <a href="/speakers/reject/<%=e._id%>/<%=speaker._id%>" class="btn btn-danger">reject</a>
                                </td>
                            <%}%>
                        </tr>
                    <% })%>
                  
                    <%secEvents.forEach((e)=>{%>
                        <tr>
                            <td><%=e._id%></td>
                            <td><%=e.Title%></td>
                            <td><%=e.Date%></td>
                            <td>Other speaker</td>
                            <td><a href="/speakers/rejectOther/<%=e._id%>/<%=speaker._id%>" class="btn btn-danger">Rejact</a></td>
                        </tr>
                    <%})%>

                </tbody>
              </table>
       </div>
    </div>
</div>    
